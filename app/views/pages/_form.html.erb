<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Заголовок
    <%= form.text_field :title %>
  </div>

  <div class="field">
    Ключевые слова
    <%= form.text_field :keywords %>
  </div>

  <div class="field">
    Описание
    <%= form.text_area :description %>
  </div>

  <div class="field">
    Контент
    <textarea id="page_content" name="page[content]">
      <%= page.content %>
    </textarea>
    <script>
      CKEDITOR.replace( 'page[content]' );
    </script>
  </div>

  <div class="field">
    Дата создания
    <%= form.date_select :create_datetime %>
  </div>

  <div class="actions">
    <%= form.submit "Отправить" %>
  </div>
<% end %>
