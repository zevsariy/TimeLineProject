<p id="notice"><%= notice %></p>

<h1>Страницы</h1>

<table class="table table-primary">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Ключевые слова</th>
      <th>Описание</th>
      <th>Контент</th>
      <th>Дата создания</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.keywords %></td>
        <td><%= page.description %></td>
        <td><%= page.content %></td>
        <td><%= page.create_datetime %></td>
        <td><%= link_to 'Показать', page %></td>
        <td><%= link_to 'Изменить', edit_page_path(page) %></td>
        <td><%= link_to 'Удалить', page, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новую страницу', new_page_path %>
