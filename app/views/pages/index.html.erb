<p id="notice"><%= notice %></p>

<h1>Страницы</h1>

<table class="table table-primary">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Ключевые слова</th>
      <th>Описание</th>
      <th>Дата создания</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.keywords %></td>
        <td><%= page.description %></td>
        <td><%= page.create_datetime %></td>
        <td><%= link_to '<i class="fa fa-search"></i>'.html_safe, page %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_page_path(page) %></td>
        <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, page, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новую страницу', new_page_path %>
