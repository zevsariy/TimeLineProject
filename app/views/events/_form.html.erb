<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Заголовок
    <%= form.text_field :title %>
  </div>

  <div class="field">
    Дата события
    <%= form.datetime_select :create_datetime, :start_year=>Date.today.year - 100,:end_year=>Date.today.year %>
  </div>

  <div class="field">
    Описание
    <%= form.text_area :description %>
  </div>

  <div class="field">
    Тип
    <%= form.text_field :event_type %>
  </div>

  <div class="field">
    Линия времени
    <%= form.collection_select :timeline_id, @timelines, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit "Отправить"%>
  </div>
<% end %>
