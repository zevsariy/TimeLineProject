<p id="notice"><%= notice %></p>

<h1>Линии времени</h1>

<table class="table table-primary">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Описание</th>
      <th>Автор</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timelines.each do |timeline| %>
      <tr>
        <td><%= timeline.title %></td>
        <td><%= timeline.description %></td>
        <td><%= timeline.user.last_name + " " + timeline.user.first_name + " " + timeline.user.middle_name%></td>
        <td><%= link_to 'Показать', timeline %></td>
        <td><%= link_to 'Изменить', edit_timeline_path(timeline) %></td>
        <td><%= link_to 'Удалить', timeline, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая линия времени', new_timeline_path %>
